<%= form_with(model: @picture, local: true, url:confirm_pictures_path) do |form| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="picture_content">
    <%= form.label :content %>
    <br>
    <%= form.text_area :content, size: "90x5" %>
  </div>
  <div class="picture_image">
    <%= form.label :image %>
    <%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %>
    <%= form.file_field :image %>
  </div>
  <%= form.submit %>
<% end %>